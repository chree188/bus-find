.item {
  display: flex;
  padding: 0 35rpx;
  min-height: 60px;
  /* height: 80px; */
}

.walk {
  background-color: #fff;
}

.bus {
  background-color: #ebf5fb;
}

.icon {
  align-self: center;
  font-size: 20px;
}

.walk .icon {
  color: #2caa60;
}

.bus .icon {
  color: #0082dc;
}

.split-line {
  position: relative;
  margin: 0 20px;
  width: 2px;
}

.item:first-child .split-line {
  margin-top: 22px;
}

.item:last-child .split-line {
  margin-bottom: 22px;
}

.walk .split-line {
  background-color: #2caa60;
}

.bus .split-line {
  background-color: #0082dc;
}

.circle {
  position: absolute;
  left: -3px;
  width: 8px;
  height: 8px;
  background-color: inherit;
  border-radius: 50%;
}

.start-circle {
  top: 10px;
}

.terminal-circle {
  bottom: 10px;
}

.item:first-child .start-circle {
  top: -12px;
  left: -5px;
  border: 2px solid #44cba9;
  background-color: transparent;
}

.item:last-child .terminal-circle {
  bottom: -12px;
  left: -5px;
  border: 2px solid #ff5a00;
  background-color: transparent;
}

.detail {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 6px 0;
}

.start,
.terminal {
  font-size: 14px;
}

.content {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 12px;
  color: #888;
}

.content view {
  margin: 4px 0;
}

.station {
  display: inline;
  font-size: 13px;
  color: #000;
}
