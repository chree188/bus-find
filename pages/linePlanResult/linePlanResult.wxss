page {
  padding: 10px 0;
}

.item {
  display: flex;
  justify-content: space-between;
  height: 50px;
  padding: 8px 35rpx;
  background-color: #fff;
  margin-bottom: 8px;
}

.item:last-child {
  margin-bottom: 0;
}

.content {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
}

.transit {
  font-size: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.intro {
  display: flex;
  font-size: 13px;
  color: #333;
}

.walk-icon {
  margin-left: 2px;
  align-self: baseline;
  color: #888;
}

.enter-icon {
  align-self: center;
  margin-left: 10px;
  font-size: 14px;
  color: #888;
}
