.line-list {
  padding: 0 35rpx;
  background-color: #fff;
}

.line-list .item {
  display: flex;
  justify-content: space-between;
  padding: 15px 0;
  height: 50px;
  border-bottom: 1px solid #eaeaea;
}

.line-list .item:last-child {
  border-bottom: none;
}

.line-list .intro {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.line-list .name {
  font-size: 16px;
}

.line-list .start-terminal,
.line-list .price {
  font-size: 12px;
  color: #666;
}

.line-list .start-terminal {
  display: flex;
  align-items: center;
}

.line-list .arrow {
  margin: 0 3px;
  width: 14px;
  height: 14px;
}

.line-list .price {
  margin-left: 30px;
  align-self: center;
}

.line-list .collected {
  align-self: center;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40px;
  height: 40px;
}

.collected .start {
  width: 20px;
  height: 20px;
}
